{
  "name": "lenientime",
  "version": "0.0.0",
  "description": "Parse time leniently and then format strictly",
  "main": "./cjs/index.js",
  "types": "./types/index.d.ts",
  "module": "./es/index.js",
  "jsnext:main": "./es/index.js",
  "jsdelivr": "./umd/lenientime.min.js",
  "unpkg": "./umd/lenientime.min.js",
  "scripts": {
    "rebuild": "npm run clean && npm run build",
    "build": "npm run lint && npm run build:umd && npm run build:cjs && npm run build:es",
    "build:umd": "rollup -c && uglifyjs -m -o umd/lenientime.min.js umd/lenientime.js",
    "build:cjs": "tsc -p .",
    "build:es": "tsc -p . -m es2015 --outDir ./es -d --declarationDir ./types",
    "watch": "echo \"Rollup watch crashes in cmd/PowerShell on windows. see https://github.com/rollup/rollup/issues/1739\" && exit 1",
    "watch_": "rollup -c -w",
    "clean": "rimraf umd cjs es types",
    "lint": "tslint -p .",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "WTFPL",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "jest": "^21.2.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.52.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglify-js": "^3.2.0",
    "umd": "^3.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
