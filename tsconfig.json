{
  "compilerOptions": {
    "outDir": "./cjs",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "typedocOptions": {
    "name": "Lenientime",
    "out": "docs/api/",
    "mode": "file",
    "theme": "minimal",
    "excludeExternals": true,
    "excludePrivate": true
  }
}
