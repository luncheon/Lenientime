{
  "extends": ["tslint:recommended"],
  "rules": {
    "no-var-requires": false,
    "no-unsafe-finally": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-string-throw": false,
    "no-empty": ["error", {"allowEmptyCatch": true}],
    "interface-name": [false],
    "max-line-length": [true, 140],
    "max-classes-per-file": [false],
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "only-arrow-functions": [false],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "array-type": [true, "array"],
    "object-literal-sort-keys": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "import-spacing": false,
    "ordered-imports": [true, {"import-sources-order": "lowercase-last", "named-imports-order": "lowercase-last"}],
    "space-within-parens": true,
    "space-before-function-paren": [true, {"anonymous": "always", "named": "never", "asyncArrow": "always"}],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "imports": "always",
          "exports": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "whitespace": [true, "check-module", "check-decl", "check-operator", "check-module", "check-separator", "check-type", "check-typecast"]
  }
}
